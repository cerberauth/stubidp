{
  "name": "@cerberauth/stubidp",
  "version": "0.0.3",
  "description": "A mock OpenID Connect server for developers. Zero config, instant OIDC.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "@cerberauth/stubidp": "bin/run.js",
    "stubidp": "bin/run.js"
  },
  "files": [
    "build/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "start": "node bin/run.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --write .",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:status": "changeset status"
  },
  "keywords": [
    "oidc",
    "openid-connect",
    "oauth2",
    "testing",
    "identity-provider",
    "idp",
    "stub",
    "mock",
    "development"
  ],
  "author": "CerberAuth",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/cerberauth/stubidp",
  "repository": {
    "type": "git",
    "url": "https://github.com/cerberauth/stubidp.git"
  },
  "dependencies": {
    "better-sqlite3": "12.6.2",
    "dotenv": "17.2.4",
    "drizzle-orm": "0.45.1",
    "express": "5.2.1",
    "oidc-provider": "9.6.0",
    "pg": "8.18.0",
    "pino": "10.3.0",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "10.0.1",
    "@eslint/json": "1.0.0",
    "@types/better-sqlite3": "7.6.13",
    "@types/express": "5.0.6",
    "@types/node": "25.2.2",
    "@types/oidc-provider": "9.5.0",
    "@types/pg": "8.16.0",
    "@types/yargs": "17.0.35",
    "@vitest/coverage-v8": "4.0.18",
    "drizzle-kit": "0.31.8",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "globals": "17.3.0",
    "prettier": "3.8.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vitest": "4.0.18"
  }
}
